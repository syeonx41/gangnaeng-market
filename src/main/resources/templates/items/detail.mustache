{{> layout/simple-header}}

<main>
    <h2>{{post.title}}</h2>

    <div class="detail-info">
        <p><strong>가격:</strong> {{post.price}}원</p>
        <p><strong>설명:</strong></p>
        <p>{{post.content}}</p>
    </div>

    <div class="detail-actions">
        <!-- 삭제 버튼 (POST 방식) -->
        <form action="/items/posts/{{id}}/delete" method="POST" style="display:inline;">
            <button type="submit" class="btn-delete">삭제</button>
        </form>

        <!-- 수정은 페이지 이동이므로 그대로 <a> 사용 -->
        <a href="/items/posts/{{id}}/edit" class="btn-edit">수정</a>

        <!-- 거래 완료 버튼 (POST 방식) -->
        <form action="/items/posts/{{id}}/complete" method="POST" style="display:inline;">
            <button type="submit" class="btn-complete">거래 완료</button>
        </form>
    </div>
</main>

{{>layout/footer}}
